<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tvKey"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/ivDecrease"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/ivDecrease"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/tvValue"
        android:src="@drawable/ic_keyboard_arrow_left"
        android:contentDescription="@string/minus_symbol"/>

    <TextView
        android:id="@+id/tvValue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/ivIncrease"
        android:gravity="center"
        android:textSize="16sp"
        android:text="0"/>

    <ImageView
        android:id="@+id/ivIncrease"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_keyboard_arrow_right"
        android:onClick=""
        android:contentDescription="@string/plus_symbol"/>

</RelativeLayout>