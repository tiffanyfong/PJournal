<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="FRAGMENT_HYGIENE"
    android:padding="10dp">

    <com.tmf.pjournal.NumberPicker
        android:id="@+id/npLightPads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/number_picker"/>

    <com.tmf.pjournal.NumberPicker
        android:id="@+id/npMediumPads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/number_picker"/>

    <com.tmf.pjournal.NumberPicker
        android:id="@+id/npHeavyPads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/number_picker"/>

    <com.tmf.pjournal.NumberPicker
        android:id="@+id/npLightTampons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/number_picker"/>

    <com.tmf.pjournal.NumberPicker
        android:id="@+id/npMediumTampons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/number_picker"/>

    <com.tmf.pjournal.NumberPicker
        android:id="@+id/npHeavyTampons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/number_picker"/>

    <com.tmf.pjournal.NumberPicker
        android:id="@+id/npMenstrualCups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/number_picker"/>

</LinearLayout>